{
  "name": "htmlite",
  "version": "1.0.0",
  "description": "A quick & tiny library to parse HTML string to JS object",
  "keywords": [
    "html",
    "parser",
    "dom",
    "tree"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage -u && yarn lint",
    "coverage": "cat coverage/lcov.info | coveralls",
    "lint": "eslint --ext .js,.ts src --fix",
    "prepare": "yarn build"
  },
  "repository": "git@github.com:teabyii/htmlite.git",
  "author": "teabyii <teabyii@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "jest": "^25.5.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
